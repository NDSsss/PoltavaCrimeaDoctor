<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoctorScaner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DoctorScaner.Fullscreen" parent="Theme.DoctorScaner">
        <item name="android:actionBarStyle">@style/Widget.Theme.DoctorScaner.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="Widget.Theme.DoctorScaner.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="TerminalTextAppearance" parent="TextAppearance.AppCompat">

    </style>

    <style name="TerminalTextAppearance.H1">
        <item name="android:textSize">46sp</item>
    </style>
    <style name="TerminalTextAppearance.H1.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TerminalTextAppearance.H2">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="TerminalTextAppearance.H2.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TerminalTextAppearance.H4">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#93A6BC</item>
    </style>
    <style name="TerminalTextAppearance.H4.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>